{
  "manifest_version": 3,
  "name": "Twitch Channel ads muter",
  "version": "0.1.0",
  "description": "Logs Twitch channel info from live pages.",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Twitch ads muter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab"],
  "host_permissions": ["https://www.twitch.tv/*"],
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ]
}
